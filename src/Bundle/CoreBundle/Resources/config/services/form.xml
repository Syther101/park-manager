<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="false" />

        <service id="park_manager.form_handler.administrator.handler_factory" class="Hostnet\Component\FormHandler\HandlerFactory">
            <argument id="form.factory" type="service" />
            <argument type="service" id="park_manager.form_handler.administrator.handler_registry" />
        </service>
        <service id="park_manager.form_handler.administrator.handler_registry" class="ParkManager\Bundle\UserBundle\Form\FormHandlerRegistry">
            <argument />
        </service>

        <!-- Handlers -->
        <service id="park_manager.form_handler.security.administrator.request_password_reset" parent="park_manager.form_handler.security.request_password_reset" public="true">
            <tag name="admin_form.handler" />
            <argument id="prooph_service_bus.administrator.command_bus" type="service" />
            <argument type="string">park_manager.administrator.security_login</argument>
        </service>
        <service id="park_manager.form_handler.security.administrator.confirm_password_reset" parent="park_manager.form_handler.security.confirm_password_reset" public="true">
            <tag name="admin_form.handler" />
            <argument id="prooph_service_bus.administrator.command_bus" type="service" />
            <argument type="string">park_manager.administrator.security_login</argument>
        </service>
        <service id="park_manager.form_handler.security.administrator.change_password" parent="park_manager.form_handler.security.change_password" public="true">
            <tag name="admin_form.handler" />
            <argument id="prooph_service_bus.administrator.command_bus" type="service" />
            <argument type="string">admin_home</argument>
        </service>
    </services>
</container>
