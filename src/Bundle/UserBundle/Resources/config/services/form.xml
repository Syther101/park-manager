<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <!-- Handlers -->
        <service id="park_manager.form_handler.security.request_password_reset" class="ParkManager\Bundle\UserBundle\Form\Handler\RequestPasswordResetFormHandler" abstract="true">
            <argument id="session.flash_bag" type="service" />
            <argument id="translator" type="service" />
            <argument id="router" type="service" />
            <argument id="request_stack" type="service" />
        </service>
        <service id="park_manager.form_handler.security.confirm_password_reset" class="ParkManager\Bundle\UserBundle\Form\Handler\ConfirmPasswordResetFormHandler" abstract="true">
            <argument id="request_stack" type="service" />
            <argument id="session.flash_bag" type="service" />
            <argument id="translator" type="service" />
            <argument id="router" type="service" />
            <argument id="ParkManager\Component\User\Security\Argon2iPasswordEncoder" type="service" />
        </service>
    </services>
</container>
